<% provide(:title, 'Blog Posts') %>
<% provide(:heading, 'Blog Posts') %>
<% provide(:sub_heading, 'You can see blog post\'s information here') %>
<% provide(:bg_image, 'blog-post-bg.png') %>

<!-- Main Content--> 
<main class="mb-4">
    <div class="container px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
              <table class="table table-hover">
                <thead>
                  <tr>
                    <th>Title</th>
                    <th>Summary</th>
                    <th>Content</th>
                    <th>User</th>
                    <th>Title image url</th>
                    <th colspan="3"></th>
                  </tr>
                </thead>
                <tbody>
                  <% @blog_posts.each do |blog_post| %>
                    <tr>
                      <td><%= blog_post.title %></td>
                      <td><%= blog_post.summary %></td>
                      <td><%= blog_post.content %></td>
                      <td><%= blog_post.user_id %></td>
                      <td><%= blog_post.title_image_url %></td>
                      <td><%= link_to 'Show', blog_post %></td>
                      <td><%= link_to 'Edit', edit_blog_post_path(blog_post) %></td>
                      <td><%= link_to 'Destroy', blog_post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
              <br>
              <%= link_to 'New Blog Post', new_blog_post_path %>
            </div>
        </div>
    </div>
</main>


